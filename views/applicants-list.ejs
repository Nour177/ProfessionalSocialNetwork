<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post a Job Offer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/acceuil.css">
    <script src="/jq/jquery-3.7.1.min.js"></script>
</head>
<body>

<div id="navbar"></div>
<script src="/js/loadNavbar.js"></script>


<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Applicants for: <strong><%= job.title %></strong></h2>
        <a href="/jobs/<%= job._id %>" class="btn btn-outline-secondary">Back to Job</a>
    </div>

    <% if (applications.length === 0) { %>
        <div class="alert alert-info">No applicants yet.</div>
    <% } else { %>
        
        <div class="row">
            <% applications.forEach(app => { %>
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            
                            <img src="<%= app.applicantId.profileImagePath || '/images/default-user.png' %>" 
                                 class="rounded-circle me-3" 
                                 style="width: 60px; height: 60px; object-fit: cover;">
                            
                            <div class="flex-grow-1">
                                <h5 class="mb-0">
                                    <%= app.applicantId.firstname %> <%= app.applicantId.lastname %>
                                </h5>
                                <small class="text-muted">email : <%= app.applicantId.email %></small>
                                <small class="text-muted"><%= app.applicantId.description || 'No description' %></small>
                                <br>
                                <small class="text-secondary">Applied: <%= new Date(app.appliedAt).toLocaleDateString() %></small>
                            </div>

                            <div>
                                <a href="/profile/<%= app.applicantId._id %>" class="btn btn-sm btn-outline-primary">
                                    View Profile
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>